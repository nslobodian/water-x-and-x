version: '3.7'

services:

  dev:
    command: npm run start:debug
    ports:
      - 3000:3000
      - 9229:9229
    networks:
      - network
    volumes:
      - .:/usr/src/app
      - /usr/src/app/node_modules
    restart: unless-stopped

  prod:
    command: npm run start:prod
    ports:
      - 3000:3000
      - 9229:9229
    networks:
      - network
    volumes:
      - .:/usr/src/app
      - /usr/src/app/node_modules
    restart: unless-stopped

  db:
    environment:
      POSTGRES_PASSWORD: password
      POSTGRES_USER: user
      POSTGRES_DB: water
      PGDATA: /data/postgres
    ports:
      - 5432:5432
    volumes:
      - postgres:/data/postgres
    restart: unless-stopped
    networks:
      - network

  elasticsearch:
    volumes:
      - esdata:/usr/share/elasticsearch/data
    environment:
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
      - discovery.type=single-node
    logging:
      driver: none
    ports:
      - 9300:9300
      - 9200:9200
    networks: 
      - network

networks:
  network:
    name: water-x-and-x-network
    driver: bridge

volumes:
    postgres:
    esdata:
